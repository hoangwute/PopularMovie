<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:drawable="@drawable/navigation_pressed"
        android:state_enabled="false"/> <!--button_disabled-->
    <item
        android:drawable="@drawable/navigation_pressed"
        android:state_enabled="true"
        android:state_pressed="true"/> <!--button_pressed-->
    <item
        android:drawable="@drawable/navigation_focus"
        android:state_selected="false"
        ></item>

    <item
        android:drawable="@drawable/navigation_pressed"
        android:state_selected="true"
        ></item>

    <item
        android:drawable="@drawable/navigation_focus"
        android:state_enabled="true"
        android:state_focused="true"/> <!--button_focused-->

    <item
        android:drawable="@drawable/navigation_focus"
        android:state_enabled="true"/> <!--button_enabled-->
</selector>